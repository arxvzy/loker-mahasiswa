generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model general {
  id                   Int       @id(map: "lokers_pkey") @unique @default(autoincrement())
  created_at           DateTime  @default(now()) @db.Timestamptz(6)
  nama_perusahaan      String?   @db.VarChar
  posisi               String?   @db.VarChar
  deskripsi_perusahaan String?
  pendidikan           String?   @db.VarChar
  gender               String?   @db.VarChar
  jenis_waktu          String?   @db.VarChar
  alamat               String?
  panduan_daftar       String?
  kategori             String?   @db.VarChar
  jobdesk              jobdesk[]
  syarat               syarat[]
}

model jobdesk {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  jobdesk    String?  @db.VarChar
  general_id Int?
  general    general? @relation(fields: [general_id], references: [id], onDelete: Cascade)
}

model syarat {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  syarat     String?  @db.VarChar
  general_id Int?
  general    general? @relation(fields: [general_id], references: [id], onDelete: Cascade)
}
